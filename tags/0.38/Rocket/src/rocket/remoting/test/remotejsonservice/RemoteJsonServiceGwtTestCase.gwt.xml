<module>
	<inherits name="com.google.gwt.junit.JUnit"/>
	<inherits name="rocket.json.Json"/>
	<inherits name="rocket.remoting.Remoting"/>	
	
	<source path="client" />	
		
	<generate-with class="rocket.remoting.rebind.json.RemoteJsonServiceGenerator">
		<when-type-assignable class="rocket.remoting.test.remotejsonservice.client.NotAnInterface" />
	</generate-with>

	<generate-with class="rocket.remoting.rebind.json.RemoteJsonServiceGenerator">
		<when-type-assignable class="rocket.remoting.test.remotejsonservice.client.DoesntImplementRemoteJsonService" />
	</generate-with>		

	<servlet
		path="/ClassWithStringFieldJsonResponse"
		class="rocket.remoting.test.remotejsonservice.server.ClassWithStringFieldJsonResponseServlet" />

	<servlet
		path="/ClassWith3StringFieldsJsonResponse"
		class="rocket.remoting.test.remotejsonservice.server.ClassWith3StringFieldsJsonResponseServlet" />

	<servlet
		path="/brokenJsonResponse"
		class="rocket.remoting.test.remotejsonservice.server.BrokenJsonServlet" />

	<servlet
		path="/internalServerError"
		class="rocket.remoting.test.remotejsonservice.server.InternalServerErrorServlet" />

	<servlet
		path="/jsonRpc"
		class="rocket.remoting.test.remotejsonservice.server.JsonRpcEchoServlet" />
				

</module>
